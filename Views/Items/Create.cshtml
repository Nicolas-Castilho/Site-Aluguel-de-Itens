@model aluguel.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nmitem" class="control-label"></label>
                <input asp-for="nmitem" class="form-control" />
                <span asp-validation-for="nmitem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dsitem" class="control-label"></label>
                <input asp-for="dsitem" class="form-control" />
                <span asp-validation-for="dsitem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="snativo" class="control-label"></label>
                <select asp-for="snativo" class="form-control" />
                <option>S</option>
                <option>N</option>
                <span asp-validation-for="snativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem1" class="control-label"></label>
                <input asp-for="imagem1" class="form-control" />
                <span asp-validation-for="imagem1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem2" class="control-label"></label>
                <input asp-for="imagem2" class="form-control" />
                <span asp-validation-for="imagem2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem3" class="control-label"></label>
                <input asp-for="imagem3" class="form-control" />
                <span asp-validation-for="imagem3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem4" class="control-label"></label>
                <input asp-for="imagem4" class="form-control" />
                <span asp-validation-for="imagem4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagem5" class="control-label"></label>
                <input asp-for="imagem5" class="form-control" />
                <span asp-validation-for="imagem5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="iduser" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="form-control" />
                <span asp-validation-for="iduser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
