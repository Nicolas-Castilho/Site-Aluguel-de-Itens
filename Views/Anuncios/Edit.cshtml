@model aluguel.Models.Anuncio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/f9a4013b2c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="assets/css/site.css">
    <link rel="stylesheet" href="assets/css/cadastro.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <title>Login Dark/Light Mode</title>
</head>
<body>
    <main id="container">

        <form id="login_form" method="post" enctype="multipart/form-data">

            <!-- FORM HEADER -->
            <div id="form_header">
                <h1>Tela de Edição</h1>
                <i id="mode_icon" class="fa-solid fa-moon"></i>

            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />

                <div class="form-group">
                    <label asp-for="vlitem" class="control-label">Valor</label>
                    <input asp-for="vlitem" class="form-control" />
                    <span asp-validation-for="vlitem" class="text-danger"></span>

                    <label asp-for="diasAluguel" class="control-label">Dias Oferecidos</label>
                    <input asp-for="diasAluguel" class="form-control" />
                    <span asp-validation-for="diasAluguel" class="text-danger"></span>

                    <input asp-for="iduser" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="form-control" />
                    <span asp-validation-for="iduser" class="text-danger"></span>

                    <input asp-for="itemid" type="hidden" class="form-control" />
                    <span asp-validation-for="itemid" class="text-danger"></span>

                    <div class="form-group">
                        <input asp-for="categoriaid" type="hidden" class="form-control">
                    </div>

                    <div class="form-group">
                        <input asp-for="tipoid" type="hidden" class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="modelo" class="control-label"></label>
                        <input asp-for="modelo" class="form-control" />
                    </div>

                    <div class="form-group col-md">
                        <label for="Cep">CEP *</label>
                        <input id="txtCep" type="text" name="Cep" placeholder="00000-000">
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Cidade">Cidade *</label>
                        <input id="txtCidade" type="text" name="Cidade" placeholder="Cidade">
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Bairro">Bairro *</label>
                        <input id="txtBairro" type="text" name="Bairro" placeholder="Bairro">
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Estado">Estado *</label>
                        <input id="txtEstado" type="text" name="Estado" placeholder="UF">
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Numero">Numero</label>
                        <input id="txtNumero" type="text" name="Numero" placeholder="Numero">
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Rua">Rua *</label>
                        <input id="txtRua" type="text" name="Rua" placeholder="Rua">
                        <span asp-validation-for="Rua" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Complemento">Complemento</label>
                        <textarea class="form-control" input id="Complemento" type="text" name="Complemento" placeholder="Complemento"></textarea>
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>

                    <label asp-for="contato" class="control-label">Contato</label>
                    <input asp-for="contato" class="form-control" />
                    <span asp-validation-for="contato" class="text-danger"></span>

                    <label asp-for="NomeFantasia" class="control-label">Como as pessoas devem te chamar?</label>
                    <input asp-for="NomeFantasia" class="form-control" />
                    <span asp-validation-for="NomeFantasia" class="text-danger"></span>

                    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                    <a asp-action="Index">Voltar para a lista</a>
                </div>
            </form>
        </form>
    </main>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
